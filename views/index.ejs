<!DOCTYPE html>
<html>
	<head>
		<title>Index</title>
        <link rel="stylesheet" href="/styles.css">
	</head>
	<body>
        <div class ="books">
            <ul>
                <% book.forEach((book) => { %>
                    <li>Book: <%= book.book %></li>
                    <button type="Edit">Edit</button>
                    <form action="/delete" method="GET">
                        <button type="submit">Delete</button>
                    </form>                
                <% }); %>
            </ul>
            <ul>
                <% genre.forEach((genre) => { %>
                    <li>Category: <%= genre.genre %></li>
                    <button type="Edit">Edit</button>
                    <form action="/delete" method="GET">
                        <button type="submit">Delete</button>
                    </form>
                <% }); %>
            </ul>
        </div>
	</body>
</html>
